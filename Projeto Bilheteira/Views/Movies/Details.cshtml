        <dd class = "col-sm-10">
            @if (Model.photo != null)
            {
                <img style="width:95px;height:120px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.photo))">
            }
            else
            {
                <img style="width:40px;height:40px; object-fit:cover" src="">
            }
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.trailer)
            <div class="container" style = "position:relative; right:15px; left:400px; top:10px; bottom:10px;" >
              <iframe 
                        width="560"
                        height="315"
                        src= "@Html.DisplayFor(model => model.trailer)"
                        title=""
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                    </iframe>
                    </div>
            
        </dt>
    </dl>
        

