@model Utad_Proj_.ViewModel.PurchaseIntentViewModel

@{
    ViewData["Title"] = "Check Out";
}

<h1>CheckOut</h1>

<div>
    <h4>Purchase</h4>
    <hr />
    <form asp-controller="Rooms" asp-action="ConfirmPurchase" method="post" enctype="multipart/form-data">
        <div>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ApplicationUserId)
            @Html.HiddenFor(model => model.MovieSessionId)
        </div>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Date)
                @Html.HiddenFor(model => model.Date)
            </dd>

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MovieTitle)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MovieTitle)
                @Html.HiddenFor(model => model.MovieTitle)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoomName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoomName)
                @Html.HiddenFor(model => model.RoomName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NumberOfTickets)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NumberOfTickets)
                @Html.HiddenFor(model => model.NumberOfTickets)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
                @Html.HiddenFor(model => model.Price)
            </dd>
        </dl>

        <a href="/Movies">
        <div class="form-group">
            <input type="submit" value="Confirm Purchase" class="btn btn-primary" />
        </div>
        </a>
    </form>
</div>
